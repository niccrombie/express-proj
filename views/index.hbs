<body class="container">
    <div class="">
        <h1>{{title}}</h1>
        <p>Welcome to {{title}}</p>
        <p>Use the following form to add a new Student profile</p>
        <form action="/api/student" method="post">
            <input type="text" name="name" placeholder="First Name" /><br />
            <input type="text" name="address" placeholder="Adress" /><br />
            <input type="text" name="city" placeholder="City" /><br />
            <input type="text" name="state" placeholder="State" /><br />
            <input type="text" name="school" placeholder="School" /><br />
            <input type="text" name="gradeLevel" placeholder="Grade Level" /><br />
            <input type="text" name="email" placeholder="Email Address" /><br />
            <input type="text" name="phone" placeholder="Phone Number" /><br />
            <input type="submit" value="Add Student"/><br>
        </form>
    </div>
    <div>
        <p>Use the following form to add a new School profile</p>
        <form action="/api/school" method="post">
            <input type="text" name="name" placeholder="School Name" /><br />
            <input type="text" name="address" placeholder="Adress" /><br />
            <input type="text" name="city" placeholder="City" /><br />
            <input type="text" name="state" placeholder="State" /><br />
            <input type="text" name="usd" placeholder="School USD Code" /><br />
            <input type="submit" value="Add School"/><br>
        </form>
    </div>
</body>
